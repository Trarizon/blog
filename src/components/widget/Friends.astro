---

import { friendConfig } from "../../config";
import ButtonLink from "../control/ButtonLink.astro";
import WidgetLayout from "./WidgetLayout.astro";

interface Props {
	class?: string;
	style?: string;
}

const className = Astro.props.class;
const style = Astro.props.style;

const friends = friendConfig.links;
---
{friends.length > 0 &&
<WidgetLayout name="友链" id="friends" class={className} style={style}>
    {friends.map((f)=>
        <ButtonLink url={f.url}>
            {f.name}
        </ButtonLink>
    )}
</WidgetLayout>}